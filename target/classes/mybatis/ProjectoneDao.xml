<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wang.dao.ProjectoneDao">
    <select id="listProjectone" resultType="com.wang.pojo.Projectone">
        select *
        from choiceone
    </select>

    <select id="listProjectoneBytest" parameterType="com.wang.pojo.query.ProjectoneQuery" resultType="com.wang.pojo.Projectone">
        select *
        from choiceone
        <where>
            <if test="test != null and test != ''">
                and `test` like concat('%',#{test},'%')
            </if>
        </where>
    </select>

    <delete id="deleteProjectoneById" parameterType="int">
        delete from choiceone where id=#{id}
    </delete>

    <select id="queryProjectoneById" parameterType="int" resultType="com.wang.pojo.Projectone">
        select * from choiceone where  id=#{id}
    </select>

    <update id="updateProjectone" parameterType="com.wang.pojo.Projectone">
        update choiceone
        set test = #{test},choose_a = #{choose_a},answer = #{answer},text = #{text},img = #{img},choose_b = #{choose_b},choose_c = #{choose_c},choose_d = #{choose_d},type = #{type}
        where id = #{id}
    </update>

    <insert id="addProjectone" parameterType="com.wang.pojo.Projectone">
        insert into choiceone(test,choose_a,choose_b,choose_c,choose_d,answer,img,text) values (#{test},#{choose_a},#{choose_b},#{choose_c},#{choose_d},#{answer},#{img},#{text},#{type})
    </insert>
</mapper>